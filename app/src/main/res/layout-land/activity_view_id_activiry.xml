<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageid1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewIdActiviry">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/backround"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/finalbg" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="108dp"
        android:contentDescription="@string/corner"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aa" />

    <TextView
        android:id="@+id/nameid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/name"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imagelinkid"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutid"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:width="80dp"
        android:height="80dp"
        android:background="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/Qrcodeid"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/qrcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagelinkid"
        app:srcCompat="@drawable/loading" />

    <Button
        android:id="@+id/shareid"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logoutid" />

    <ImageView
        android:id="@+id/imagelinkid"
        android:layout_width="146dp"
        android:layout_height="173dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imagelink"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loading" />

    <TextView
        android:id="@+id/addrid"
        android:layout_width="406dp"
        android:layout_height="49dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/address"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imagelinkid"
        app:layout_constraintTop_toBottomOf="@+id/Nicid" />

    <TextView
        android:id="@+id/RegNoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/reg_no"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imagelinkid"
        app:layout_constraintTop_toBottomOf="@+id/nameid1" />

    <TextView
        android:id="@+id/Nicid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/nic"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imagelinkid"
        app:layout_constraintTop_toBottomOf="@+id/RegNoid" />

    <ImageView
        android:id="@+id/barcodeid"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/barcode"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/logoutid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addrid"
        app:srcCompat="@drawable/loading" />

    <ImageView
        android:id="@+id/sigid"
        android:layout_width="162dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/signature"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Qrcodeid"
        app:srcCompat="@drawable/common_full_open_on_phone" />

</android.support.constraint.ConstraintLayout>